@model TimeTrackingApp.Models.ViewModel.LeaveRequestViewModel

<h2 class="text-center">Nowy wniosek urlopowy</h2>
@Html.AntiForgeryToken()
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="LeaveType" class="form-label">Typ Urlopu</label>
        <select asp-for="LeaveType" class="form-select">
            <option value="Wypoczynkowy">Wypoczynkowy</option>
            <option value="Okolicznościowy">Okolicznościowy</option>
            <option value="Bezpłatny">Bezpłatny</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Od</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">Do</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label">Powód</label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-success w-75 w-sm-50">Wyślij wniosek</button>
    </div>

</form>

