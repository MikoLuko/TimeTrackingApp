@model TimeTrackingApp.Models.ViewModel.LeaveRequestViewModel

<h2>Nowy wniosek urlopowy</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="LeaveType" class="form-label"></label>
        <select asp-for="LeaveType" class="form-select">
            <option value="Wypoczynkowy">Wypoczynkowy</option>
            <option value="Okolicznościowy">Okolicznościowy</option>
            <option value="Bezpłatny">Bezpłatny</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Reason" class="form-label"></label>
        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Wyślij wniosek</button>
</form>

